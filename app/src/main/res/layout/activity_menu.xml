<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DE8A8A"
    tools:context=".MenuActivity">

    <!-- ðŸ”¹ TÃ­tulo superior -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MenÃº"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- ðŸ”¹ Fila de categorÃ­as -->
    <LinearLayout
        android:id="@+id/seccionCategorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp">

        <Button
            android:id="@+id/btnEntrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Entrada"
            android:backgroundTint="#FFC107"
            android:textColor="#000000"
            android:paddingHorizontal="16dp"/>

        <Button
            android:id="@+id/btnBebida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Bebida"
            android:backgroundTint="#03A9F4"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="16dp"/>

        <Button
            android:id="@+id/btnGuarnicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="GuarniciÃ³n"
            android:backgroundTint="#8BC34A"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="16dp"/>

    </LinearLayout>

    <!-- ðŸ”¹ CuadrÃ­cula de comidas -->
    <GridLayout
        android:id="@+id/gridComidas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="2"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@id/seccionCategorias"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <!-- ðŸ¥— Ejemplo de Ã­tem de comida -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/ensaladaimagen"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="Ensalada" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ensalada"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- ðŸ” Otro Ã­tem -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="135dp"
                android:layout_height="140dp"
                android:adjustViewBounds="true"
                android:background="@drawable/rounded_button"
                android:contentDescription="Hamburguesa"
                android:scaleType="centerCrop"
                android:src="@drawable/hamburguesaimagen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hamburguesa"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- ðŸ• Tercer Ã­tem -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/pizza"
                android:background="@drawable/rounded_button"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="Pizza" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- ðŸ° Cuarto Ã­tem -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/postre"
                android:background="@drawable/rounded_button"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="Postre" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Postre"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>